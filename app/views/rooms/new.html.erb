<div class="container mx-auto px-4">
  <div class="flex justify-center mt-14">
    <div class="w-full max-w-lg">
      <h1 class="text-2xl font-bold mb-10">チャットルーム作成</h1>
      <%= form_with model: @room do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <div class="mb-10">
          <%= f.label :name, "チャットルーム名", class: "block mb-1" %>
          <%= f.text_field :name, class: "input input-bordered w-full max-w-xs" %>
        </div>
        <div class="mb-10">
          <%= f.label :description, "説明", class: "block mb-1" %>
          <%= f.text_field :description, class: "input input-bordered w-full max-w-xs" %>
        </div>
        <%= f.submit "作成", class: 'btn btn-neutral mb-10' %>
        <%= link_to "戻る", rooms_path, class: 'btn btn-neutral mb-10 ml-5' %>
      <% end %>
    </div>
  </div>
</div>