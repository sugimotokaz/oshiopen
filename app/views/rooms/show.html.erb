<div class="container mx-auto px-4 mb-36">
  <div class="flex justify-center">
    <div class="w-full max-w-5xl">
      <div class="flex justify-between">
        <div class="flex-1 flex items-center">
          <h1 class="text-3xl font-bold mt-10 mb-4"><%= @room.name %></h1>
        </div>
        <div class="space-x-4 flex items-center">
          <%= link_to "退会", room_leave_path(current_user.user_rooms.find_by(room_id: @room.id)), class: "btn btn-neutral", id: "leave-room-button-#{@room.id}", data: { turbo_method: :delete, turbo_confirm: "本当に退会しますか？" } %>
        </div>
      </div>
      <div class="bg-base-200 min-h-3.5 p-2">
      
    </div>
  </div>
</div>