<div class="container mx-auto px-8">
  <div class="flex justify-center mt-14">
    <div class="w-full max-w-md">
      <h1 class="text-2xl font-bold mb-8">ログイン</h1>
      <%= form_with url: login_path do |f| %>
        <div class="mb-6">
          <%= f.label :email, class: "block mb-2" %>
          <%= f.email_field :email, class: "input input-bordered w-full" %>
        </div>
        <div class="mb-6">
          <%= f.label :password, class: "block mb-2" %>
          <%= f.password_field :password, class: "input input-bordered w-full" %>
        </div>
        <div class="mx-auto flex justify-center text-center mb-4">
          <%= f.submit "ログイン", class: 'btn btn-neutral' %>
        </div>
        <div class="text-center mb-4">
          <p>または</p>
        </div>
        <div class="mx-auto flex justify-center text-center mb-6">
          <%= link_to auth_at_provider_path(provider: :google) do %>
            <%= image_tag "Sign_up_with_Google.png" %>
          <% end %>
        </div>
        <div class="text-center mb-4">
          <%= link_to "新規作成ページへ", new_user_path, class: "text-blue-400 hover:underline" %>
        </div>
        <div class="text-center">
          <%= link_to "パスワードをお忘れの方はこちらへ", new_password_reset_path, class: "text-blue-400 hover:underline" %>
        </div>
      <% end %>
    </div>
  </div>
</div>