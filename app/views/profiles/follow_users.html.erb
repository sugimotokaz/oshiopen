<% content_for(:title, @profile.user.name + "お気に入りユーザー一覧") %>

<div class="container mx-auto px-4">
  <div class="flex justify-center mt-8">
    <div class="w-full max-w-3xl">
      <h1 class="text-center text-2xl font-bold mb-4"><%= @profile.user.name %>お気に入りユーザー一覧</h1>

      <!-- 検索フォーム -->
      <%= render 'user_search_form', q: @q, url: follow_users_profile_path(@profile) %>

      <!-- ユーザー一覧 -->
      <% if @following_users.present? %>
        <%= render partial: "follow_user", collection: @following_users, as: :follow_user %>
      <% else %>
        <h1 class="text-center text-lg mt-8">お気に入りユーザーを登録していません</h1>
      <% end %>

      <!-- ページネーション -->
      <%= paginate @following_users %>

    </div>
  </div>
</div>