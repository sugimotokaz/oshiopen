<div class="container mx-auto px-4">
  <div class="flex justify-center mt-14">
    <div class="w-full max-w-5xl">
      <h1><%= @profile.user.name %>記事一覧</h1>
    </div>
  </div>
</div>
<div>
  <div>
    <% if @articles.present? %>
      <%= render partial: 'articles/article', collection: @articles %>
    <% else %>
      <h1>記事はありません</h1>
    <% end %>
  </div>
  <%= paginate @articles %>
</div>