<div class="container mx-auto px-4">
  <div class="flex justify-center mt-8">
    <div class="w-full max-w-3xl">
      <h1 class="text-center text-2xl font-bold mb-4"><%= @profile.user.name %>記事一覧</h1>

      <!-- 検索フォーム -->
      <%= render 'shared/search_form', q: @q, url: my_articles_profile_path(@profile) %>

      <!-- 記事一覧 -->
        <% if @articles.present? %>
          <%= render partial: 'articles/article', collection: @articles %>
        <% else %>
          <h1 class="text-center text-lg mt-8">作成した記事はありません</h1>
        <% end %>

      <!-- ページネーション -->
      <%= paginate @articles %>

    </div>
  </div>
</div>