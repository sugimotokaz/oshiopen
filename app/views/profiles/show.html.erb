<div class="container mx-auto px-4">
  <div class="flex justify-center mt-14">
    <div class="w-full max-w-5xl">
      <div class="bg-base-200 min-h-3.5 p-2">
        <div class="hero-content flex-col lg:flex-row">
          <%= image_tag @profile.profile_image.url, class: "w-24 rounded-full" %>
          <p class="text-4xl font-bold"><%= @profile.name %></p>
        </div>
        <div class="flex justify-center m-4">
          <div class="w-full max-w-3xl">
            <div class="flex">
              <p>性別：</p>
              <p><%= @profile.gender %></p>
            </div>
            <div class="flex">
              <p>誕生年度：</p>
              <p><%= @profile.birth_year || '選択なし' %></p>
            </div>
            <div>
              <p>自己紹介：</p>
              <p><%= @profile.self_introduction %></p>
            </div>
            <% if current_user == @profile.user %>
              <%= link_to edit_profile_path do %>
                <i class="fa-solid fa-pen"></i>
              <% end %>
            <% elsif logged_in? %>
              <%= render 'shared/follow_buttons', { user: @user } %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="container mx-auto px-4 mt-4">
  <div class="flex justify-center">
    <div class="w-full max-w-5xl">
      <div class="bg-base-200 min-h-3.5 p-2">
        <h1><%= link_to "#{@profile.name}記事一覧", articles_profile_path(@profile) %></h1>
      </div>
    </div>
  </div>
</div>
<div class="container mx-auto px-4 mt-4">
  <div class="flex justify-center">
    <div class="w-full max-w-5xl">
      <div class="bg-base-200 min-h-3.5 p-2">
        <% if current_user == @profile.user %>
          <%= link_to new_profile_oshi_detail_path(@profile) do %>
            <i class="fa-solid fa-plus">推し追加</i>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div>
  <!-- 推し一覧 -->
  <%= render partial: 'oshi_detail', collection: @oshi_details %>
</div>