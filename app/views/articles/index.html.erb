<div class="container mx-auto px-4">
  <div class="flex justify-center mt-8">
    <div class="w-full max-w-3xl">
      <h1 class="text-center text-2xl font-bold mb-4">記事一覧</h1>

      <!-- 検索フォーム -->
      <%= render 'shared/search_form', q: @q, url: articles_path %>

      <!-- 記事一覧 -->
      <% if @articles.present? %>
        <%= render partial: 'article', collection: @articles %>
      <% else %>
        <h1 class="text-center text-xl mt-8">記事はありません</h1>
      <% end %>

      <!-- ページネーション -->
      <%= paginate @articles %>
      
    </div>
  </div>
</div>