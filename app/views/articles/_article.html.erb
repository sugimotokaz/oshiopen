<div class="container mx-auto px-4">
  <div class="flex justify-center">
    <div class="w-full max-w-5xl">
      <div class="bg-base-200 min-h-3.5 p-2">
        <div class="m-4">
          <div id="article-id-<%= article.id %>">

            <div class="card bg-base-100 w-96 shadow-xl">
              <div class="card-body">
                <h2 class="card-title">
                  <%= link_to article.title, article_path(article) %>
                </h2>
                <h3><%= article.notice %><h3>
                <h3><%= article.user.profile.name %><h3>
                <h3>カテゴリ：<%= article.category %><h3>
                <h3>作成日：<%= article.created_at %><h3>
              </div>
              <div>
                <%= link_to "#" do %>
                  <i class="fa-solid fa-pen"></i>
                <% end %>
                <%= link_to "#", data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" } do %>
                  <i class="fa-solid fa-trash"></i>
                <% end %>
              </div>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>
