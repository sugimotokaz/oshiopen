<footer class="footer bg-base-300 fixed bottom-0 flex justify-between w-full">
  <div class="container mx-auto px-4">

      <div class="w-full max-w-5xl">
        <!-- フォーム -->
        <%= form_with model: @message, url: room_messages_path(@room), class: "flex items-center space-x-4 pt-2 pb-2" do |f| %>
          <%= f.text_field :body, class: "textarea textarea-bordered w-full" %>  
          <%= f.submit "送信", class: 'btn btn-neutral flex-none' %>
        <% end %>
      </div>

  </div>
</footer>